<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">
	
	<context:component-scan base-package="kr.co.ch03"></context:component-scan>
	
	<aop:config>
		<aop:pointcut  id="selectPointcut" expression="execution(void kr.co.ch03.BoardService.select())"/>
		<aop:pointcut id="updatePointcut" expression="execution(void kr.co.ch03.BoardService.update())"/>
		<aop:pointcut id="deletePointcut" expression="execution(void kr.co.ch03.BoardService.delete())"/>
		
		<aop:aspect ref="logAdvice">
			<aop:before method="beforeLog" pointcut-ref="selectPointcut"/>
			<aop:after method="afterLog" pointcut-ref="selectPointcut"/>
			
			<aop:before method="updateBefore" pointcut-ref="updatePointcut"/>
			<aop:before method="updateAfter" pointcut-ref="updatePointcut"/>
			
			<aop:before method="deleteBefore" pointcut-ref="deletePointcut"/>
			<aop:before method="deleteAfter" pointcut-ref="deletePointcut"/>
		</aop:aspect>
	</aop:config>

</beans>
